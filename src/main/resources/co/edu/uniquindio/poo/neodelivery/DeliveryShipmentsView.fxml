<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.neodelivery.controllers.DeliveryShipmentsController">
   <children>
      <VBox spacing="16.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <Label id="titleManager" text="Assigned Shipments" />
            <TableView fx:id="assignedShipmentsTable" prefHeight="220.0" styleClass="custom-table">
               <columns>
                  <TableColumn fx:id="assignedShipmentIdColumn" text="Shipment ID" />
                  <TableColumn fx:id="assignedCustomerNameColumn" text="Customer name" />
                  <TableColumn fx:id="assignedAddressColumn" text="Address" />
                  <TableColumn fx:id="assignedShipmentDateColumn" text="Shipment date" />
                  <TableColumn fx:id="assignedStatusColumn" text="Status" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER_LEFT" spacing="12.0">
               <children>
                  <Button fx:id="markAsPickedUpButton" mnemonicParsing="false" onAction="#handleMarkAsPickedUp" prefHeight="40.0" prefWidth="180.0" styleClass="managerButton" text="Mark as picked up" />
                  <Button fx:id="markAsDeliveredButton" mnemonicParsing="false" onAction="#handleMarkAsDelivered" prefHeight="40.0" prefWidth="180.0" styleClass="managerButton" text="Mark as delivered" />
               </children>
            </HBox>
            <Label id="titleManager" text="Delivered Shipments" />
            <TableView fx:id="deliveredShipmentsTable" prefHeight="220.0" styleClass="custom-table">
               <columns>
                  <TableColumn fx:id="deliveredShipmentIdColumn" text="Shipment ID" />
                  <TableColumn fx:id="deliveredCustomerNameColumn" text="Customer name" />
                  <TableColumn fx:id="deliveredAddressColumn" text="Address" />
                  <TableColumn fx:id="deliveredShipmentDateColumn" text="Shipment date" />
                  <TableColumn fx:id="deliveredStatusColumn" text="Status" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
         <padding>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>


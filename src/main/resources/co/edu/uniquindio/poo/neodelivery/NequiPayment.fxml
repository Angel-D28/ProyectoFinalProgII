        <Button id="buttonNequi" fx:id="btnPagarNequi" onAction="#validarPagoNequi" prefHeight="37.0" prefWidth="230.0" style="-fx-background-color: #F5008D; -fx-text-fill: white; -fx-font-size: 16px;                        -fx-background-radius: 15;" text="Pagar con Nequi" />

        <!-- NOTA -->
        <Label style="-fx-font-size: 12px; -fx-text-fill: #777;" text="Serás redirigido a la confirmación." />

    </VBox>

</AnchorPane>

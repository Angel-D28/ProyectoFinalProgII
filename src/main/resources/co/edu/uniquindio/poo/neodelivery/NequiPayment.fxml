<AnchorPane prefHeight="200.0" prefWidth="200.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.neodelivery.controllers.NequiController">

    <VBox id="loginPane" alignment="CENTER" fillWidth="false" layoutX="255.0" layoutY="63.0" prefHeight="558.0" prefWidth="390.0" spacing="25" AnchorPane.bottomAnchor="64.20000000000005" AnchorPane.leftAnchor="255.0" AnchorPane.rightAnchor="255.39999999999998" AnchorPane.topAnchor="63.0">
      <ImageView fitHeight="137.0" fitWidth="145.0" pickOnBounds="true" preserveRatio="true">

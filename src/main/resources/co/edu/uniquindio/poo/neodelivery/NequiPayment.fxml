        <!-- DESCRIPCIÓN -->
        <Label style="-fx-font-size: 18px; -fx-text-fill: #333;" text="Pagar con Nequi" />

        <!-- NUMERO -->
        <VBox alignment="CENTER_LEFT" fillWidth="false" spacing="6">
            <Label style="-fx-font-size: 14px;" text="Número Nequi" />
            <TextField fx:id="txtNequiNumber" prefHeight="38.0" prefWidth="300.0" promptText="Ej: 3001234567" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10;" />
